    <TargetFramework>net5.0</TargetFramework>
    <GenerateProgramFile>false</GenerateProgramFile>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.9.0" />
    <PackageReference Include="MSTest.TestAdapter" Version="1.3.2" />
    <PackageReference Include="MSTest.TestFramework" Version="1.3.2" />
  </ItemGroup>

  <ItemGroup>
     <PackageReference Include="fo-dicom" Version="5.0.0"/>
    <PackageReference Include="fo-dicom.Drawing" Version="4.0.7" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../Platform/fo-dicom/fo-dicom.Codecs.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="./*.dcm" CopyToOutputDirectory="Always" />
    <None Include="../../Native/Linux64/linux-x64/*.so" CopyToOutputDirectory="Always" />
    <None Include="../../Native/MacOS/macOS/*.dylib" CopyToOutputDirectory="Always" />
    <None Include="../../Native/Windows64/win-x64/*.dll" CopyToOutputDirectory="Always" />
  </ItemGroup>
</Project>